extends clock-layout

block content
    ul(id="menu")
        li
            a(href="javascript:location.reload()")
                i(class="glyphicon glyphicon-repeat")
        li
            a(href="#clock", class="active")
                i(class="glyphicon glyphicon-time")
        li
            a(href="#alarm")
                i(class="glyphicon glyphicon-music")
        li
            a(href="#music")
                i(class="glyphicon glyphicon-play")

    section(id="clock")
        div(id="time") Uhrzeit
        canvas(id="clockid", class="CoolClock:swissRail:100")
        div(id="message")

    <ection(id="alarm", class="hidden")
        p Wecker
        form(role="form")
            div
                input(type="checkbox") aktiv
            </div>

            <div>
                <input type="number"> : <input type="number">
            </div>

            <div>
                <button type="submit">OK</button>
            </div>
        </form>
    </section>